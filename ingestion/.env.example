# Database Configuration
# Primary connection string (Preferred for Coolify/Heroku/Railway)
# Format: postgres://user:password@hostname:5432/dbname
DATABASE_URL=postgres://postgres:password@db:5432/postgres

# Redis Configuration
# Format: redis://[:password@]hostname[:port][/db]
REDIS_URL=redis://default:password@redis:6379/0

# Legacy/Alternative Database Configuration (Fallback if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_DATABASE=postgres

# Finnhub API
FINNHUB_API_KEY=your_finnhub_key

# Yahoo Fantasy API
YAHOO_CLIENT_ID=your_yahoo_client_id
YAHOO_CLIENT_SECRET=your_yahoo_client_secret
YAHOO_CALLBACK_URL=/yahoo/callback

# Domain Configuration (For Let's Encrypt / ACME)
DOMAIN_NAME=yourdomain.com
CONTACT_EMAIL=admin@yourdomain.com
ACME_ENABLED=true

# Service Ports (Optional overrides)
# PORT=3001 # For finance/sports services
